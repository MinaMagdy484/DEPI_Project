@model Lesson

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Lesson</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLesson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CourseID" /> <!-- Hidden CourseID -->
            <div class="form-group">
                <label asp-for="VideoURL" class="control-label"></label>
                <input asp-for="VideoURL" class="form-control" />
                <span asp-validation-for="VideoURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonContent" class="control-label"></label>
                <input asp-for="LessonContent" class="form-control" />
                <span asp-validation-for="LessonContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuizID" class="control-label"></label>
                <input asp-for="QuizID" class="form-control" />
                <span asp-validation-for="QuizID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CourseID" /> <!-- Ensure CourseID is included -->
                <span asp-validation-for="CourseID" class="text-danger"></span>
                <p class="form-control-static">@ViewBag.CourseName</p> <!-- Display the Course Name or ID -->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
